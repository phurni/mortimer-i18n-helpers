{
    "name": "mortimer/i18n-helpers",
    "description": "Laravel package providing translation helpers for objects like exceptions, eloquent models and attributes",
    "keywords": ["laravel", "translation", "i18n", "localization", "l10n", "exception", "eloquent", "enum"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pascal Hurni",
            "email": "phi@pragmaticpurist.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/translation": ">=6.0",
        "illuminate/support": ">=6.0"
    },
    "autoload": {
        "psr-4": {
            "Mortimer\\I18nHelpers\\": "src/"
        },
        "files": [
            "src/trans_exception.php",
            "src/trans_model.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mortimer\\I18nHelpers\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
